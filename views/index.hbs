<table>
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">Email</th>
      <th scope="col">Phone</th>
      <th scope="col">Hire Date</th>
      <th scope="col">Department</th>
      <th scope="col">Status</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>

    {{#each data}}
    <tr>
      <th scope="row">{{id}}</th>
      <td>{{first_name}}</td>
      <td>{{last_name}}</td>
      <td>{{email}}</td>
      <td>{{phone}}</td>
      <td>{{hire_date}}</td>
      <td>{{department}}</td>
      <td>{{status}}</td>
      <td class="action">

        <a href="#" type="button" id="view"><button>View</button></a>
        <a href="#" type="button" id="edit"><button>Edit</button></a>
        <a href="#" type="button" id="delete"><button>Delete</button></a>

      </td>
    </tr>

    {{/each}}

  </tbody>
</table>



